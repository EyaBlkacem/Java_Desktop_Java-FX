<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>

<?import javafx.scene.image.Image?>

<?import javafx.scene.image.ImageView?>

<?import javafx.geometry.Insets?>



<AnchorPane fx:id="rootPane"

            xmlns:fx="http://javafx.com/fxml"

            fx:controller="presentation.RegisterController"

            style="-fx-background-color: linear-gradient(to bottom right, #4facfe, #00f2fe);">



    <VBox alignment="CENTER"

          spacing="18"

          AnchorPane.topAnchor="0"

          AnchorPane.bottomAnchor="0"

          AnchorPane.leftAnchor="0"

          AnchorPane.rightAnchor="0">



        <VBox spacing="14"

              alignment="CENTER"

              maxWidth="360"

              style="-fx-background-color: white;

                     -fx-background-radius: 15;

                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">



            <padding>

                <Insets top="30" right="30" bottom="30" left="30"/>

            </padding>



            <!-- LOGO -->

            <ImageView fitWidth="150" preserveRatio="true">

                <image>

                    <Image url="file:///C:/Users/LENOVO/eclipse/eya/Shop_Pet/src/presentation/flight_logo.png"/>

                </image>

            </ImageView>



            <Label text="Create an account"

                   style="-fx-font-size: 22px;

                          -fx-font-weight: bold;

                          -fx-text-fill: #1e3c72;" />



            <Label text="Join FlightBooking"

                   style="-fx-text-fill: #777;" />



            <TextField fx:id="usernameField"

                       promptText="Nom d'utilisateur"

                       style="-fx-background-radius: 10;

                              -fx-border-radius: 10;

                              -fx-padding: 10;" />



            <TextField fx:id="emailField"

                       promptText="Email"

                       style="-fx-background-radius: 10;

                              -fx-border-radius: 10;

                              -fx-padding: 10;" />



            <PasswordField fx:id="passwordField"

                           promptText="Mot de passe"

                           style="-fx-background-radius: 10;

                                  -fx-border-radius: 10;

                                  -fx-padding: 10;" />



            <PasswordField fx:id="confirmPasswordField"

                           promptText="Confirmer le mot de passe"

                           style="-fx-background-radius: 10;

                                  -fx-border-radius: 10;

                                  -fx-padding: 10;" />



            <Button text="Create an account"

                    onAction="#register"

                    maxWidth="Infinity"

                    style="-fx-background-color: #4facfe;

                           -fx-text-fill: white;

                           -fx-font-size: 14px;

                           -fx-font-weight: bold;

                           -fx-background-radius: 10;

                           -fx-padding: 10;" />



            <Label fx:id="messageLabel"

                   style="-fx-text-fill: red;" />

                    <HBox alignment="CENTER" spacing="5">

    <Label text="Already have an account?"

           style="-fx-text-fill: #555;" />



    <Label text="Sign in"

           onMouseClicked="#goToLogin"

           style="-fx-text-fill: #4facfe;

                  -fx-font-weight: bold;

                  -fx-underline: true;

                  -fx-cursor: hand;" />

</HBox>



        </VBox>



      





    </VBox>

</AnchorPane>

